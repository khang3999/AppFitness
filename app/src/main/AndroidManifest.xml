<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeFitness"
        tools:targetApi="31">
        <activity
            android:name=".activities.ResultExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StartExerciseActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StartExercise"

            android:name=".activities.ChooseTargetActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InputWeightActivity"
            android:exported="false" />
        <activity
            android:name=".activities.InputHeightActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChooseGenderActivity"

            android:exported="false" />
        <activity
            android:name=".activities.InputNameActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ListExerciseActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.AppDrawerActivity"
            android:exported="true"
            android:label="@string/title_activity_app"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.HomeFitness" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>