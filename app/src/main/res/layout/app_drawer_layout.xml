<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AppDrawerActivity"
    android:id="@+id/appDrawerLayout"
    tools:openDrawer="start">

    <FrameLayout
        android:id="@+id/mainScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_layout" />
    </FrameLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@drawable/header_background">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginHorizontal="16dp"
                android:src="@mipmap/ic_account_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/headerFullname"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:paddingHorizontal="@dimen/_32dp"
                android:text="@string/fullname"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toTopOf="@+id/headerGender"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/headerGender"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:paddingHorizontal="@dimen/_32dp"
                android:text="@string/gender"
                android:textColor="@color/white"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/headerFullname"
                app:layout_constraintVertical_bias="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listAction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/header_height"
            android:paddingHorizontal="@dimen/_16dp">

            <TextView
                android:id="@+id/slideTvHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16dp"
                android:text="Height :"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toTopOf="@+id/slideTvWeight"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/tvHeightData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16dp"
                android:paddingLeft="@dimen/_16dp"
                android:text="165"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toBottomOf="@+id/slideTvHeight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/slideTvHeight" />

            <TextView
                android:id="@+id/slideTvWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16dp"
                android:layout_marginEnd="12dp"
                android:text="Weight :"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toTopOf="@+id/slideTvBMI"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slideTvHeight"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/tvWeightData"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginVertical="@dimen/_16dp"
                android:paddingLeft="@dimen/_16dp"
                android:text="75"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toBottomOf="@+id/slideTvWeight"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/slideTvWeight" />

            <TextView
                android:id="@+id/slideTvBMI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16dp"
                android:text="BMI :"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/slideTvWeight"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/tvBmiData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_16dp"
                android:paddingLeft="@dimen/_16dp"
                android:text="20"
                android:textSize="@dimen/fs_20"
                app:layout_constraintBottom_toBottomOf="@+id/slideTvBMI"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/slideTvBMI" />





            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>