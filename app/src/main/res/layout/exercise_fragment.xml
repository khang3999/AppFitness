<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_16dp"
    tools:context=".activities.AppDrawerActivity"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edtFind"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="@string/search_here"
        android:textSize="@dimen/fs_24"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/_16dp"
        android:layout_weight="1"/>
    <ListView
        android:id="@+id/lvExercise"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginBottom="@dimen/_16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnGetList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fs_20"
            android:text="@string/get_list"/>
        <Button
            android:id="@+id/btnAddFavoriteList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fs_20"
            android:text="@string/add_favorite_list"/>
    </LinearLayout>
</LinearLayout>