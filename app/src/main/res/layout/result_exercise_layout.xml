<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ResultExerciseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/_64dp"
        android:layout_weight="0.5"
        android:text="YOU ROCK!"
        android:textAlignment="center"
        android:textSize="@dimen/_32dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_electric_bolt_24"
                android:layout_marginLeft="@dimen/_90dp"
                android:layout_marginRight="@dimen/_64dp"></ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_local_fire_department_24"
                android:layout_marginRight="@dimen/_64dp"></ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_timer_24"></ImageView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTotalExercises"
            android:layout_width="28dp"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/_90dp"
            android:layout_marginRight="@dimen/_66dp"
            android:textAlignment="center"
            android:textSize="@dimen/_28sp">
        </TextView>
        <TextView
            android:id="@+id/txtTotalCalories"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="720"
            android:layout_marginRight="45dp"
            android:textAlignment="center"
            android:textSize="@dimen/_28sp">
        </TextView>
        <TextView
            android:id="@+id/txtTotalTimes"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="820"
            android:layout_marginRight="@dimen/_64dp"
            android:textAlignment="center"
            android:textSize="@dimen/_28sp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="35dp"
            android:text="@string/exercises"
            android:textAlignment="center"
            ></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:text="@string/calories"
            android:textAlignment="center">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/times"
            android:textAlignment="center">
        </TextView>


    </LinearLayout>
    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:textSize="@dimen/_32dp"
        android:backgroundTint="#afea0d"
        android:textColor="@color/black"/>
</LinearLayout>