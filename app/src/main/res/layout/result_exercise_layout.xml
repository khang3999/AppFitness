<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ResultExerciseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="@dimen/_64dp"
        android:layout_weight="0.5"
        android:text="YOU ROCK!"
        android:textAlignment="center"
        android:textSize="@dimen/_32dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_electric_bolt_24"
                android:layout_marginLeft="@dimen/_90dp"
                android:layout_marginRight="@dimen/_64dp"></ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_local_fire_department_24"
                android:layout_marginRight="@dimen/_64dp"></ImageView>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_timer_24"></ImageView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="28dp"
            android:layout_height="47dp"
            android:layout_marginLeft="@dimen/_90dp"
            android:layout_marginRight="@dimen/_64dp"
            android:text="@string/seconds"></TextView>
        <TextView
            android:layout_width="30dp"
            android:layout_height="51dp"
            android:src="@drawable/baseline_local_fire_department_24"
            android:layout_marginRight="@dimen/_64dp"></TextView>
        <TextView
            android:layout_width="30dp"
            android:layout_height="51dp"
            android:src="@drawable/baseline_timer_24"></TextView>
    </LinearLayout>
</LinearLayout>